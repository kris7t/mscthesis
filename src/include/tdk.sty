    }
  }

  % If there is a doi, there is no need for other identifiers
  \iffieldundef{doi}{}{
    \clearfield{url}
    \clearfield{isbn}
    \clearfield{issn}
    \clearfield{eprint}
  }

  % If there is an eprint location, there is no need for other identifiers
  \iffieldundef{eprint}{}{
    \clearfield{url}
    \clearfield{isbn}
    \clearfield{issn}
  }

